<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Your Floss</h1>
  <hr />


	<table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Colour</th>
          <th>Increase</th>
          <th>Quantity</th>
          <th>Decrease</th>
        </tr>
      </thead>
      <tbody>
        <% @flosses.each do |floss| %>
        <tr>
          <td><%= floss.colour %></td>
          <td><i class="fa fa-minus"></i></td>
          <td><%= floss.quantity %></td>
          <td><i class="fa fa-plus"></i></td>
        </tr>
        <% end %>
      </tbody>
    </table>    
</div>