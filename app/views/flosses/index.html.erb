<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Your Floss</h1>
  <hr />
	<%= link_to new_floss_path, :class => 'btn btn-primary btn-lg' do %>
    <span class="glyphicon glyphicon-plus"></span> New Floss
  <% end %>
  <%= link_to "DMC", flosses_path(:brand=>"DMC"), :class => 'btn btn-info' %>
  <%= link_to "Anchor", flosses_path(:brand=>"Anchor"), :class => 'btn btn-info' %>
  <%= link_to "Madeira", flosses_path(:brand=>"Madeira"), :class => 'btn btn-info' %>
	<br />
	<br />
	<table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Colour</th>
          <th>Quantity</th>
          <th>Update</th>
        </tr>
      </thead>
      <tbody>
        <% @flosses.each do |floss| %>
        <tr>
          <td><%= floss.colour %></td>
          <td>
          	<%= simple_form_for @quantity, url: floss_quantities_path(floss), remote: true do |f| %>   
			       <%= f.input :quantity, label: false, :size => 5 %>
		      </td>
		      <td><%= f.submit "update", :class => 'btn btn-success' %></td>
		    <% end %>
        </tr>
        <% end %>
      </tbody>
    </table> 
</div>